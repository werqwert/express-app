class Slidebar {
    constructor(options = {}, value = 0) {
	this.options = Object.assign(
	    {
		min: 0,
		max: 1,
		step: 0.1,
		cssWidth: '100vw'
	    }, options
	)
	
	this.element = Object.assign(
	    document.createElement("div"), {
		className: "slidebar"
	    }
	)
	this.element.style.width = this.options.width

	
    }
}
